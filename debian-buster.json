{
  "builders": [
    {
      "type"              : "vmware-iso",
      "iso_url"           : "{{user `template_sourcedir`}}/debian-10.4.0-amd64-netinst.iso",
      "iso_checksum"     : "sha1:4cb66b8ffcd8d067d97d936ee35721ef5596635a",
      "cpus"              : 2,
      "memory"            : 1024,
      "version"           : 10,
      "guest_os_type"     : "debian10-64",
      "disk_adapter_type" : "lsisas1068",
      "vm_name"           : "{{user `template_name`}}",
      "vmdk_name"         : "{{user `template_name`}}",
      "communicator"      : "ssh",
      "ssh_username"    : "{{user `os_username`}}",
      "ssh_password"    : "{{user `os_password`}}",
      "ssh_timeout"     : "4h",
      "shutdown_command"  : "echo 'VMware1!' | sudo -S shutdown -P now",
      "shutdown_timeout"  : "30m",
      "skip_compaction"   : true,
      "output_directory"  : "{{user `template_outputdir`}}",
      "headless"          : false,
      "http_directory"    : "{{template_dir}}/setup/Debian",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname=debian <wait>",
        "netcfg/get_domain=local <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ]
    },

    {
      "type": "vsphere-iso",
      "vcenter_server":      "{{user `vsphere_hostname`}}",
      "username":            "{{user `vsphere_username`}}",
      "password":            "{{user `vsphere_password`}}",
      "insecure_connection": "true",
      "iso_url": "http://mirror.nl.leaseweb.net/debian-cd/current/amd64/iso-cd/debian-10.6.0-amd64-netinst.iso",
      "iso_checksum" : "sha1:a93827ab9971c99e6c077ebaa86daf50aed36777",
      "datacenter"        : "Speeltuin",
      "cluster"           : "Speeltuin",
      "resource_pool"     : "VOC",
      "CPUs":             2,
      "RAM":              1024,
      "RAM_reserve_all": false,
      "guest_os_type": "debian10_64Guest",
      "disk_controller_type": ["pvscsi"],
      "storage": [
        {
          "disk_size": 4096,
          "disk_thin_provisioned": true
        }
      ],
      "vm_name": "{{user `template_name`}}",
      "ssh_username": "{{user `os_username`}}",
      "ssh_password": "{{user `os_password`}}",
      "notes": "Test van Rudolf om software-defined nieuwe VM templates te maken. Kan dus prima weggegooid worden.",
      "host"              : "{{user `vsphere_targethost`}}",
      "datastore"         : "XIO_BackupTest_Exchange",
      "network_adapters": [
        {
          "network": "General/vancis-cs-install-1955[A,B]",
          "network_card": "vmxnet3"
        }
      ],
     "convert_to_template": false,
     "http_directory": "{{template_dir}}/setup/Debian",
     "boot_wait": "20s",
     "boot_command": [
      "<esc><wait>",
      "install <wait>",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
      "debian-installer=en_US.UTF-8 <wait>",
      "auto <wait>",
      "locale=en_US.UTF-8 <wait>",
      "kbd-chooser/method=us <wait>",
      "keyboard-configuration/xkb-keymap=us <wait>",
      "netcfg/get_hostname=debian <wait>",
      "netcfg/get_domain=local <wait>",
      "fb=false <wait>",
      "debconf/frontend=noninteractive <wait>",
      "console-setup/ask_detect=false <wait>",
      "console-keymaps-at/keymap=us <wait>",
      "grub-installer/bootdev=/dev/sda <wait>",
      "<enter><wait>"
    ]
    }
],

"provisioners": [
  {
    "type": "shell",
    "inline": ["figlet Welcome to vMA TechCon 2020 !"]
  }
]
}
